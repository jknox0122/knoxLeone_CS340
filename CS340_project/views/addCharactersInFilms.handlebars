<script>
    const alertSuccess = () => {
        alert('Character has been added to the selected film. Navigate back to films to see.');
    }
</script>

<div>
    <h1>Add Character To Film</h1>
    <a href="/films">Films</a>
    <form id="addCharacterInFilm" action="/add_characters_in_films" method="POST" onsubmit="alertSuccess()">
        Characters: <select name="CharacterID"> 
            {{#each characters}}
                <option value="{{CharacterID}}">{{Name}}</option>
            {{/each}}
        </select>

        Films: <select name="FilmID">
            {{#each films}}
                <option value="{{FilmID}}">{{Name_Of_Movie}}</option>
            {{/each}}
        </select>
        <input type="submit" value="Submit"/>
    </form>
</div>
