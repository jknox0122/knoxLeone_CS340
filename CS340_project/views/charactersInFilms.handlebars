<style>
    input[type=text], select {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

h1{
    text-align: center;
}
button {
  width: 100%;
  background-color: #4CAF50;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

button:hover {
  background-color: #45a049;
}

div {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;
}

table{
    text-align: center;
}
</style>


<h1>Star Wars Characters in Films {{characterFilms.FilmID}}</h1>
<a href="/films">Back To Films</a>
<div>
<table id="characterFilm" class="table table-striped" style="width: 60rem; margin:auto; margin-top: 2rem; margin-bottom: 2rem;">
    <thead>
        <th>Name</th>
        <th>Birth Date</th>
        <th>Gender</th>
        <th>Species</th>
        <th>Height</th>
        <th>Homeworld</th>
    </thead>
    <tbody>
        {{#each characterFilms}}
        <tr>
            <td>{{Name}}</td>
            <td>{{Birthdate}}</td>
            <td>{{Gender}}</td>
            <td>{{Species}}</td>
            <td>{{Height}}</td>
            <td>{{homeworld}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
<form id="addCharacterInFilm" action="/character_in_films/{{this.FilmID}}" method="POST">
  Characters: <select name="CharacterID"> 
    {{#each characters}}
      <option value="{{CharacterID}}">{{Name}}</option>
    {{/each}}
  </select>
  <input type="submit" value="Submit" />
</form>
</div>