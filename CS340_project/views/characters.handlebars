<style>
  input[type=text], select {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

h1{
    text-align: center;
}
button {
  width: 100%;
  background-color: #4CAF50;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

button:hover {
  background-color: #45a049;
}

div {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;
}
table{
  text-align: center;
}
</style>


<h1>Star Wars Characters</h1>
<a href="/">Home</a>
<div>
<table class="table table-striped" style="width: 60rem; margin:auto; margin-top: 2rem; margin-bottom: 2rem;">
    <thead>
        <th>Name</th>
        <th>Birth Date</th>
        <th>Gender</th>
        <th>Species</th>
        <th>Height</th>
        <th>Homeworld</th>
    </thead>
    <tbody>
        {{#each characters}}
        <tr>
            <td>{{Name}}</td>
            <td>{{Birthdate}}</td>
            <td>{{Gender}}</td>
            <td>{{Species}}</td>
            <td>{{Height}}</td>
            <td>{{homeworld}}</td>
            <td><button onclick="deleteCharacter({{CharacterID}})">Delete</button></td>
            <td><a href="/characters/{{CharacterID}}"><button>Update</button></a></td>
        </tr>
        {{/each}}
    </tbody>
    <form style="width: 60 rem; margin:auto; margin-top: 2rem;" id="addCharacter" action="/characters" method="POST">
    Name: <input type="text" name="Name"><br>
    Birth Date: <input type="text" name="Birthdate"><br>
    Gender: <input type="text" name="Gender"><br>
    Species: <input type="text" name="Species"><br>
    Height: <input type="text" name="Height"><br>
    Homeworld: <select name="WorldID"> 
      {{#each homeworlds}}
        <option value="{{WorldID}}">{{Name}}</option>
      {{/each}}
    </select>
    <a href="/homeworlds">Not Listed?</a><br><br>
    <input type="submit" value="Submit">
    </form>
</table>
</div>